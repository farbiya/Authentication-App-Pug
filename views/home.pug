extends layouts/main

block content
    include partials/_nav
    


    .main.container.text-xs-center
        h1.display-5 All Schedule Details 
        if(data && data.length>0)
            .form
                table#displayTable
                        tr
                            th User
                            th Day
                            th Start At
                            th End At
                        each schedule in data  
                            tr
                                td 
                                    a(href='/user/'+schedule.user_id) #{schedule.firstname} #{schedule.surname} 
                                td #{days[schedule.day]}
                                td #{schedule.start_time.slice(0, 5)}
                                td #{schedule.end_time.slice(0, 5)}
        if(data && data.length===0) 
            p.text-center No Schedule found!! 