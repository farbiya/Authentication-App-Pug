extends layouts/main

block content
  include partials/_nav
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up
        if(error)
          small.alert.alert-danger=error
        // register form
        form(method='POST' action='/signup')
          div.form-group
            label(for='surname') Surname:
            input#surname.form-control(type='text', placeholder='Surname' name='surname' required)
          div.form-group
            label(for='firstname') First Name:
            input#firstname.form-control(type='text', placeholder='First Name' name='firstname' required)
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email' required)
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password',placeholder='Enter your password' name='password' required)
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password',placeholder='Re-enter your password' name='confirmPassword' required)
          button.btn.btn-primary(type='submit') Sign up